<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.SettingActivity">

    <com.example.haerbin.tools.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_txt="设置"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_editpsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="31dp"
        android:paddingTop="24dp"
        android:paddingBottom="15dp"
        android:text="修改登录密码"
        android:textColor="#ff303342"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="31dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintTop_toBottomOf="@id/tv_editpsw" />

    <TextView
        android:id="@+id/tv_argment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="31dp"
        android:paddingTop="24dp"
        android:paddingBottom="15dp"
        android:text="服务协议"
        android:textColor="#ff303342"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_editpsw" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="31dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintTop_toBottomOf="@id/tv_argment" />

    <TextView
        android:id="@+id/tv_secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="31dp"
        android:paddingTop="24dp"
        android:paddingBottom="15dp"
        android:text="隐私政策"
        android:textColor="#ff303342"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_argment" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="31dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintTop_toBottomOf="@id/tv_secret" />

    <TextView
        android:id="@+id/tv_destroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="31dp"
        android:paddingTop="24dp"
        android:visibility="gone"
        android:paddingBottom="15dp"
        android:text="注销账户"
        android:textColor="#ff303342"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_secret" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="31dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintTop_toBottomOf="@id/tv_destroy" />

    <TextView
        android:id="@+id/tv_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="31dp"
        android:paddingTop="24dp"
        android:paddingBottom="15dp"
        android:text="清除缓存"
        android:textColor="#ff303342"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_destroy" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="31dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintTop_toBottomOf="@id/tv_cache" />

    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="30dp"
        android:background="@color/color_137ed0"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="退出登录"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_cache" />
</androidx.constraintlayout.widget.ConstraintLayout>