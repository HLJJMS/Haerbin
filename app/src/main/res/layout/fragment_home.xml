<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".framgent.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_home"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:text="五常无忧办"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="把方便给群众，把服务给政府"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tv_title"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/bg_home_edit"
                android:editable="false"
                android:hint="请输入需要查询的办事项目"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/white"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@id/iv_person"
                app:layout_constraintStart_toStartOf="@id/tv_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_detail" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@mipmap/ic_search"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintStart_toStartOf="@id/et_search"
                app:layout_constraintTop_toTopOf="@id/et_search" />

            <ImageView
                android:id="@+id/iv_robort"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/ic_robort"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintEnd_toEndOf="@id/et_search"
                app:layout_constraintTop_toTopOf="@id/et_search" />

            <ImageView
                android:id="@+id/iv_sun"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="25dp"
                android:src="@mipmap/ic_sun"
                app:layout_constraintBottom_toBottomOf="@id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_centigrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="19 C"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_title"
                app:layout_constraintEnd_toStartOf="@id/iv_sun"
                app:layout_constraintTop_toTopOf="@id/tv_title" />

            <ImageView
                android:id="@+id/iv_person"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:src="@mipmap/ic_home_user"
                app:layout_constraintBottom_toBottomOf="@id/et_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_search" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_conner3_solid_white"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/et_search">

                <ImageView
                    android:id="@+id/iv_hot"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:src="@mipmap/ic_zixin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="陈萌山来我市调研粮食生产..."
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_go"
                    app:layout_constraintStart_toEndOf="@id/v_1" />

                <View
                    android:id="@+id/v_1"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/bg_blue_point"
                    app:layout_constraintBottom_toBottomOf="@id/tv_1"
                    app:layout_constraintStart_toEndOf="@id/iv_hot"
                    app:layout_constraintTop_toTopOf="@id/tv_1" />

                <View
                    android:id="@+id/v_2"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/bg_blue_point"
                    app:layout_constraintBottom_toBottomOf="@id/tv_2"
                    app:layout_constraintStart_toEndOf="@id/iv_hot"
                    app:layout_constraintTop_toTopOf="@id/tv_2" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="陈萌山来我市调研粮食生产..."
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@id/iv_go"
                    app:layout_constraintStart_toEndOf="@id/v_2"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_go"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_go"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_government"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_government"
                app:layout_constraintEnd_toStartOf="@id/iv_convenience"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_bg1" />

            <ImageView
                android:id="@+id/iv_convenience"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_convenience"
                app:layout_constraintEnd_toStartOf="@id/iv_work_search"
                app:layout_constraintStart_toEndOf="@id/iv_government"
                app:layout_constraintTop_toBottomOf="@id/cl_bg1" />

            <ImageView
                android:id="@+id/iv_work_search"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_work_search"
                app:layout_constraintEnd_toStartOf="@id/iv_public_resources"
                app:layout_constraintStart_toEndOf="@id/iv_convenience"
                app:layout_constraintTop_toBottomOf="@id/cl_bg1" />

            <ImageView
                android:id="@+id/iv_public_resources"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_public_resources"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_work_search"
                app:layout_constraintTop_toBottomOf="@id/cl_bg1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政务服务"
                android:textColor="#ff333333"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/iv_government"
                app:layout_constraintStart_toStartOf="@id/iv_government"
                app:layout_constraintTop_toBottomOf="@id/iv_government" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="便民服务"
                android:textColor="#ff333333"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/iv_convenience"
                app:layout_constraintStart_toStartOf="@id/iv_convenience"
                app:layout_constraintTop_toBottomOf="@id/iv_convenience" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="办事查询"
                android:textColor="#ff333333"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/iv_work_search"
                app:layout_constraintStart_toStartOf="@id/iv_work_search"
                app:layout_constraintTop_toBottomOf="@id/iv_work_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公共资源"
                android:textColor="#ff333333"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/iv_public_resources"
                app:layout_constraintStart_toStartOf="@id/iv_public_resources"
                app:layout_constraintTop_toBottomOf="@id/iv_public_resources" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_government">


                <ImageView
                    android:id="@+id/iv_xin"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:src="@mipmap/ic_xin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_yi"
                    android:layout_width="106dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_yi"
                    app:layout_constraintEnd_toStartOf="@id/iv_xin"
                    app:layout_constraintTop_toTopOf="@id/iv_xin" />

                <ImageView
                    android:id="@+id/iv_zhi"
                    android:layout_width="106dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_zhi"
                    app:layout_constraintBottom_toBottomOf="@id/iv_xin"
                    app:layout_constraintEnd_toStartOf="@id/iv_xin" />

                <ImageView
                    android:id="@+id/iv_ren"
                    android:layout_width="106dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_ren"
                    app:layout_constraintBottom_toBottomOf="@id/iv_yi"
                    app:layout_constraintEnd_toStartOf="@id/iv_yi" />

                <ImageView
                    android:id="@+id/iv_li"
                    android:layout_width="106dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:src="@mipmap/ic_li"
                    app:layout_constraintBottom_toBottomOf="@id/iv_li"
                    app:layout_constraintEnd_toStartOf="@id/iv_yi" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_e9e9e9"
                app:layout_constraintTop_toBottomOf="@id/cl_2" />

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:text="常用服务"
                android:textColor="#ff333333"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />

            <View
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:background="@color/color_017BD0"
                app:layout_constraintBottom_toBottomOf="@id/tv_title1"
                app:layout_constraintEnd_toStartOf="@id/tv_title1"
                app:layout_constraintTop_toTopOf="@id/tv_title1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title1">

                <ImageView
                    android:id="@+id/iv_register"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_register"
                    app:layout_constraintEnd_toStartOf="@id/iv_estate"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_estate"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_estate"
                    app:layout_constraintEnd_toStartOf="@id/iv_inverst"
                    app:layout_constraintStart_toEndOf="@id/iv_register"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_inverst"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_inverst"
                    app:layout_constraintEnd_toStartOf="@id/iv_agricultrue"
                    app:layout_constraintStart_toEndOf="@id/iv_estate"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_agricultrue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_agricultrue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_inverst"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="办事登记"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_register"
                    app:layout_constraintStart_toStartOf="@id/iv_register"
                    app:layout_constraintTop_toBottomOf="@id/iv_register" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不动产登记"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_estate"
                    app:layout_constraintStart_toStartOf="@id/iv_estate"
                    app:layout_constraintTop_toBottomOf="@id/iv_estate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投资项目"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_inverst"
                    app:layout_constraintStart_toStartOf="@id/iv_inverst"
                    app:layout_constraintTop_toBottomOf="@id/iv_inverst" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农业农村"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_agricultrue"
                    app:layout_constraintStart_toStartOf="@id/iv_agricultrue"
                    app:layout_constraintTop_toBottomOf="@id/iv_agricultrue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_3">

                <ImageView
                    android:id="@+id/iv_traffic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_traffic"
                    app:layout_constraintEnd_toStartOf="@id/iv_public_service"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_public_service"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_public_service"
                    app:layout_constraintEnd_toStartOf="@id/iv_society"
                    app:layout_constraintStart_toEndOf="@id/iv_traffic"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_society"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_society"
                    app:layout_constraintEnd_toStartOf="@id/iv_more"
                    app:layout_constraintStart_toEndOf="@id/iv_public_service"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_society"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交通运输"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_traffic"
                    app:layout_constraintStart_toStartOf="@id/iv_traffic"
                    app:layout_constraintTop_toBottomOf="@id/iv_traffic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公安服务"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_public_service"
                    app:layout_constraintStart_toStartOf="@id/iv_public_service"
                    app:layout_constraintTop_toBottomOf="@id/iv_public_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社会事务"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_society"
                    app:layout_constraintStart_toStartOf="@id/iv_society"
                    app:layout_constraintTop_toBottomOf="@id/iv_society" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/iv_more"
                    app:layout_constraintStart_toStartOf="@id/iv_more"
                    app:layout_constraintTop_toBottomOf="@id/iv_more" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/bg_2"
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="15dp"
                android:background="@mipmap/bg_home2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_4" />


            <View
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:background="@color/color_017BD0"
                app:layout_constraintBottom_toBottomOf="@id/tv_title2"
                app:layout_constraintEnd_toStartOf="@id/tv_title2"
                app:layout_constraintTop_toTopOf="@id/tv_title2" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="便民服务"
                android:textColor="#ff333333"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_h"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title2" />

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_e9e9e9"
                app:layout_constraintTop_toBottomOf="@id/recycler_h" />

            <View
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:background="@color/color_017BD0"
                app:layout_constraintBottom_toBottomOf="@id/tv_title3"
                app:layout_constraintEnd_toStartOf="@id/tv_title3"
                app:layout_constraintTop_toTopOf="@id/tv_title3" />

            <TextView
                android:id="@+id/tv_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="互动平台"
                android:textColor="#ff333333"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line3" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title3">

                <ImageView
                    android:id="@+id/iv_ask"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_dorctor"
                    app:layout_constraintEnd_toStartOf="@id/iv_fault"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_fault"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_travel"
                    app:layout_constraintEnd_toStartOf="@id/iv_complain"
                    app:layout_constraintStart_toEndOf="@id/iv_ask"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_complain"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_tour"
                    app:layout_constraintEnd_toStartOf="@id/iv_zhanwei"
                    app:layout_constraintStart_toEndOf="@id/iv_fault"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_zhanwei"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_socity_service"
