<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.EditPswActivity">
    <com.example.haerbin.tools.MyTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_txt="修改密码"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_oldpsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="原密码"
        android:textColor="#ff303342"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBar" />

    <EditText
        android:id="@+id/et_oldpsw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:gravity="end"
        android:hint="请输入密码"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_oldpsw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_oldpsw" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintEnd_toEndOf="@id/et_oldpsw"
        app:layout_constraintStart_toStartOf="@id/tv_oldpsw"
        app:layout_constraintTop_toBottomOf="@id/tv_oldpsw" />

    <TextView
        android:id="@+id/tv_newpsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:text="新密码"
        android:textColor="#ff303342"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_oldpsw" />

    <EditText
        android:id="@+id/et_newpsw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:gravity="end"
        android:hint="6-18位字符，必须由数字，字母活符号组成"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_newpsw"
        app:layout_constraintTop_toTopOf="@id/tv_newpsw"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="@color/color_e9e9e9"
        app:layout_constraintEnd_toEndOf="@id/et_oldpsw"
        app:layout_constraintStart_toStartOf="@id/tv_oldpsw"
        app:layout_constraintTop_toBottomOf="@id/et_newpsw" />

    <TextView
        android:id="@+id/tv_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:text="确认密码"
        android:textColor="#ff303342"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_newpsw" />

    <EditText
        android:id="@+id/et_psw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@null"
        android:gravity="end"
        android:hint="请在此输入密码"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_psw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_psw" />




    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="55dp"

        android:layout_marginEnd="30dp"
        android:background="@color/color_137ed0"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="确认"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_psw" />


</androidx.constraintlayout.widget.ConstraintLayout>